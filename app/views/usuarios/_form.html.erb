	<%= f.email_field :email, id: 'usuario_email', type:'email', required: true, placeholder: "Email" %> 
  </div>
  
  <div class="field">
	<%= f.label :sexo %><br>
	<%= radio_button("usuario", "sexo", "m") %>
	<%= f.label :masculino %>
	<%= radio_button("usuario", "sexo", "f") %>
	<%= f.label :feminino %>
  </div>
  
  <div class="field">
	<%= f.label :data_de_nascimento %><br>
	<%= date_field(:usuario, :nascimento) %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
